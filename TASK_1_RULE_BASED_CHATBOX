def get_response(user_input):
    user_input = user_input.lower()

    # Greetings
    if user_input in ["hi", "hello", "hey", "good morning", "good evening"]:
        return "Hello! How can I help you today?"

    # Asking name
    elif "your name" in user_input:
        return "I am chatbot AI."

    # Asking help
    elif "I need help" in user_input:
        return " Sure. Please tell me your problem."

    # Asking about doing
    elif "what are you doing ?" in user_input:
        return " I'm answer your qustions."

    # Asking about AI
    elif "are you availableall the time?" in user_input:
        return "yes,I'm available whenever you open the AI."
    # Goodbye
    elif user_input in ["bye", "goodbye", "exit", "quit"]:
        return "Goodbye! Have a great day ğŸ˜Š"
    #Asking thank you
    elif "thank you!" in user_input:
         return " You're Welcome! Happy learning ğŸ˜Š"

    # Default response
    else:
        return "Sorry, I didn't understand that. Can you please rephrase?"


def chatbot():
    print("ğŸ¤– AI: Hello!")

    while True:
        user_input = input("You: ")

        response = get_response(user_input)
        print("ğŸ¤– AI:", response)

        if user_input.lower() in ["bye", "exit", "quit"]:
            break


if __name__ == "__main__":
    chatbot()

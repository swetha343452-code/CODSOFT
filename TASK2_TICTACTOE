board = [" " for _ in range(9)]

def print_board():
    print()
    print(board[0], "|", board[1], "|", board[2])
    print("--+---+--")
    print(board[3], "|", board[4], "|", board[5])
    print("--+---+--")
    print(board[6], "|", board[7], "|", board[8])
    print()

def check_winner(player):
    win_conditions = [
        [0,1,2], [3,4,5], [6,7,8],
        [0,3,6], [1,4,7], [2,5,8],
        [0,4,8], [2,4,6]
    ]
    for condition in win_conditions:
        if all(board[i] == player for i in condition):
            return True
    return False

def board_full():
    return " " not in board

def human_move():
    while True:
        try:
            move = int(input("Enter your move (1-9): ")) - 1
            if board[move] == " ":
                board[move] = "X"
                break
            else:
                print("Position already taken!")
        except:
            print("Invalid input. Enter number 1-9.")

def computer_move():
    for i in range(9):
        if board[i] == " ":
            board[i] = "O"
            break

def game():
    print("ğŸ® Tic Tac Toe - Human (X) vs Computer (O)")
    print_board()

    while True:
        human_move()
        print_board()
        if check_winner("X"):
            print("ğŸ‰ You win!")
            break
        if board_full():
            print("ğŸ¤ It's a draw!")
            break

        computer_move()
        print_board()
        if check_winner("O"):
            print("ğŸ’» Computer wins!")
            break

if __name__ == "__main__":
    game()
